{
  "environment": {
    "env_type": "minecraft",
    "grid_size": 5,
    "max_steps": 50,
    "goal_reward": 10.0,
    "game_executable_path": null,
    "screen_resolution": [
      640,
      480
    ],
    "input_delay_ms": 50,
    "observation_type": "pixels",
    "normalize_observations": true
  },
  "agent": {
    "policy_type": "random",
    "action_space": [
      "up",
      "down",
      "left",
      "right",
      "noop"
    ],
    "epsilon": 0.1,
    "learning_rate": 0.01,
    "discount_factor": 0.95,
    "hidden_dims": [
      128,
      64
    ],
    "mlp_learning_rate": 0.001,
    "encoder_type": "dummy",
    "encoder_feature_dim": 128,
    "encoder_add_noise": false
  },
  "training": {
    "num_generations": 20,
    "episodes_per_generation": 5,
    "learning_frequency": 1,
    "evaluation_frequency": 5,
    "task_templates": [
      "reach_goal",
      "avoid_obstacles",
      "collect_items",
      "time_limit",
      "exploration"
    ],
    "reward_model_type": "simple",
    "goal_completion_reward": 10.0,
    "step_penalty": 0.1,
    "progress_reward_scale": 2.0,
    "success_threshold": 5.0,
    "eval_episodes_per_task": 3
  },
  "experience": {
    "max_buffer_size": 1000,
    "auto_evict_old": true,
    "storage_dir": "experiments/baseline_dummy_env/./experience_data",
    "storage_format": "jsonl",
    "auto_backup": true,
    "backup_frequency": 100,
    "learning_sample_size": 50,
    "priority_sampling": false
  },
  "experiment_name": "minecraft_demo",
  "random_seed": 42,
  "log_level": "INFO",
  "log_file": "logs/baseline_dummy_env.log",
  "save_checkpoints": true,
  "checkpoint_frequency": 10,
  "device": "cpu",
  "num_workers": 1
}