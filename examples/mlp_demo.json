{
  "experiment_name": "mlp_demo",
  "environment": {
    "env_type": "dummy",
    "grid_size": 4,
    "max_steps": 50,
    "goal_reward": 15.0,
    "normalize_observations": false
  },
  "agent": {
    "policy_type": "mlp",
    "encoder_type": "dummy", 
    "encoder_feature_dim": 16,
    "encoder_add_noise": false,
    "action_space": ["up", "down", "left", "right", "noop"],
    "hidden_dims": [64, 32],
    "mlp_learning_rate": 0.001
  },
  "training": {
    "num_generations": 3,
    "episodes_per_generation": 3,
    "learning_frequency": 1,
    "evaluation_frequency": 2,
    "reward_model_type": "simple",
    "goal_completion_reward": 15.0,
    "step_penalty": -0.1,
    "progress_reward_scale": 1.0
  },
  "experience": {
    "max_buffer_size": 1000,
    "auto_evict_old": true,
    "storage_dir": "experiments/mlp_demo/episodes",
    "storage_format": "jsonl"
  }
}
